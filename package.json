{
  "name": "autoparts-manager-backend",
  "version": "1.0.0",
  "description": "Backend para sistema POS de taller mec√°nico",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "generate-jwt": "node scripts/generateJWT.js",
    "create-admin": "node scripts/createAdmin.js",
    "seed": "node scripts/seed.js",
    "clean-seed": "node scripts/cleanAndSeed.js",
    "reset-db": "node scripts/resetDatabase.js",
    "setup-client": "node scripts/setupNewClient.js",
    "client": "npm start --prefix client",
    "server": "nodemon server.js",
  "build": "npm install && npm install --prefix client && npm run build --prefix client",
  "bootstrap": "npm install && npm install --prefix client",
    "release:patch": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 -Type patch",
    "release:minor": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 -Type minor",
    "release:major": "powershell -ExecutionPolicy Bypass -File ./scripts/release.ps1 -Type major",
    "postinstall": "node ./scripts/generateJwtSecret.js && cd client && npm install --prefer-offline --no-audit --progress=false || exit 0"
  },
  "keywords": [
    "pos",
    "autoparts",
    "inventory"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.7",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
